generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  MASTER
  ADMIN
  USER
}

model User {
  id              String        @id @default(uuid())
  name            String
  email           String        @unique
  password        String
  active          Boolean
  role            Role
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Company {
  id              String        @id @default(uuid())
  name            String
  title           String
  description     String[]
  logo            String
  domain          String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

enum ButtonType {
  REPOSITORIO
  SITE
}

enum Logo {
  INSTAGRAM
  LINKEDIN
  FACEBOOK
  EMAIL
}

model Social {
  id              String        @id @default(uuid())
  name            String
  logo            Logo
  url             String
  buttonType      ButtonType
  active          Boolean
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}